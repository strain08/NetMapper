<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="450"
             x:Class="NetDriveManager.Views.DriveDetailView">
	<UserControl.Styles>
		<Style Selector="StackPanel.detail">
			<Setter Property="Margin" Value="16,8,16,0"/>			
		</Style>
		<Style Selector="TextBox.detail">
			<Setter Property="Margin" Value="4,2,0,0"/>
			<Setter Property="Height" Value="10"/>
		</Style>
		<Style Selector="ComboBox.detail">
			<Setter Property="Margin" Value="4,2,0,0"/>
		</Style>
		<Style Selector="TextBlock.detail">
			<Setter Property="Margin" Value="0,0,0,0"/>			
		</Style>		
	</UserControl.Styles>
	
	<DockPanel>
		<!-- ACTION TITLE -->
		<TextBlock 
			DockPanel.Dock="Top"
			FontWeight="Heavy"
			FontSize="18"
			Margin="8,0,0,0"
			Foreground="LightBlue"
			Text="{Binding OperationTitle}"
			/>
		<StackPanel
			Background="Transparent"
			HorizontalAlignment="Center"
			Orientation="Horizontal"
			Height="50"
			DockPanel.Dock="Bottom">
			<Button Classes="btnMain"
					Content="OK"
					Width="80"
					Command="{Binding Ok}"/>
			<Button Classes="btnMain"
					Width="80"
					Content="Cancel"
					Command="{Binding Cancel}"/>
		</StackPanel>
		
		<StackPanel>			
			<!-- DRIVE LETTER -->
			<StackPanel Classes="detail">
				<TextBlock Classes="detail" Text="Drive letter"/>
				<ComboBox 
					ItemsSource="{Binding DriveLettersList}"
					SelectedItem="{Binding SelectedLetter}"
					Classes="detail">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding}" />
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
				
			</StackPanel>			
			<!-- NETWORK PATH -->
			<StackPanel Classes="detail">
				<TextBlock
					Classes="detail"					
					Text="Network path"/>
				<TextBox
					Classes="detail"					
					Text="{Binding DisplayItem.NetworkPath}"
					VerticalAlignment="Center"
					Watermark="\\SERVER\share"
					/>
				
			</StackPanel>			
			<!-- PERSISTENT -->
			<StackPanel Classes="detail">
				<CheckBox
					IsChecked="{Binding DisplayItem.MappingSettings.Persistent}"
					Content="Persistent"
					ToolTip.Tip="Always connect share at application startup. When unchecked, share must be manually connected/disconnected."/>
			</StackPanel>
			<StackPanel Classes="detail">
				<CheckBox
					IsChecked="True"
					Content="Unmap when unavailable"
					ToolTip.Tip="Remove drive mapping when connection down or share becomes unavailable."/>
			</StackPanel>
			
		</StackPanel>
	</DockPanel>
	
</UserControl>
